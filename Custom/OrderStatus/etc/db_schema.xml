<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="custom_order_status_log" resource="default" engine="innodb" comment="Order Status Change Log">
        <column xsi:type="int" name="log_id" padding="10" unsigned="true" nullable="false" identity="true" comment="Log ID"/>
        <column xsi:type="int" name="order_id" padding="10" unsigned="true" nullable="false" comment="Order ID"/>
        <column xsi:type="varchar" name="increment_id" length="32" nullable="false" comment="Order Increment ID"/>
        <column xsi:type="varchar" name="old_status" length="32" nullable="true" comment="Old Status"/>
        <column xsi:type="varchar" name="new_status" length="32" nullable="false" comment="New Status"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Timestamp"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="log_id"/>
        </constraint>
        <index referenceId="CUSTOM_ORDER_STATUS_LOG_ORDER_ID" indexType="btree">
            <column name="order_id"/>
        </index>
    </table>
</schema>
